{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/companyNew.schema.json",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      },
      "price": {
        "type": "number",
        "minimum": 0
      },
      "description": {
        "type": "string"
      },
      "ingredients": {
        "type": "string"
      },
      "type": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
      "name",
      "price",
      "description",
      "type",
      "ingredients"
    ]
  }
  